<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_margin="4dp"
    android:background="#6CACDD">


    <TextView
        android:id="@+id/memberEmail"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/deleteButton"
        app:layout_constraintTop_toTopOf="parent"
        android:padding="12dp"
        android:textSize="16sp"
        tools:text="@string/your_email_address"
        android:textColor="#000000"/>

    <ImageView
        android:id="@+id/deleteButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:src="@drawable/ic_baseline_delete_24"
        app:layout_constraintTop_toTopOf="@id/memberEmail"
        app:layout_constraintBottom_toBottomOf="@id/memberEmail"
        app:layout_constraintRight_toRightOf="parent"
        android:contentDescription="@string/delete_button_icon" />


</androidx.constraintlayout.widget.ConstraintLayout>